def build(path, ci_image) {
    stage("Build"){
        docker.image("${ci_image}").inside {
            sh "cd ${path}/egov-telemetry/egov-telemetry-kafka-streams; mvn clean test verify deploy -s settings.xml -Dnexus.user=${env.NEXUS_USER} -Dnexus.password=${env.NEXUS_PASSWORD}"; cp target/egov-telemetry-kafka-streams-0.0.1-SNAPSHOT.jar ../../../egov-telemetry-kafka-streams/;
        }
    }
 }

 return this;
