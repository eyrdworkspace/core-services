def build(path, ci_image) {
    stage("Build") {
        docker.image("node:6-alpine").inside {
            sh "su root && apk update && apk add curl git ca-certificates openssl && adduser -u 1001 -h /home/sunbird/ -D sunbird && su sunbird && cd /home/sunbird && git clone https://github.com/project-sunbird/sunbird-telemetry-service.git && cd sunbird-telemetry-service/src && npm install";
        }
    }
}

return this;

